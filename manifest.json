{
  "name": "Travis Report",
  "version" : "1.0.2",
  "manifest_version" : 2,
  "permissions" : [
    "storage", "*://github.com/*",
    "*://travis-ci.org/*", "*://travis-ci.com/*"
  ],
 "icons": { "16": "images/icon.png",
           "48": "images/icon.png",
          "128": "images/icon.png" },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": ["*://github.com/*/pull/*"],
      "js": ["frameworks/jquery.js", "travisreport.js"],
      "css": ["style.css"]
    }
  ]
}
